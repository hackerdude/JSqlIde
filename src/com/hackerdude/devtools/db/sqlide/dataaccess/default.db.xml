<?xml version="1.0" encoding="UTF-8"?>
<!-- JSQLIDE Database Spec Document. -->
<databasespec name="Local MySQL">
	<!-- JDBC Driver and URL Information -->
	<jdbc>
		<driver>org.gjt.mm.mysq.Driver</driver>
		<url>jdbc:mysql://localhost:3306/mysql?user=david</url>
	</jdbc>

	<!-- Connection Properties. numconnections is the maximum number of
		 connections to open for this database spec. -->
	<connection numconnections="2">
		<property name="password" value=""/>
		<property name="username" value=""/>
	</connection>

	<!-- SQLIDE-specific values -->
	<sqlidespecific ideDriver="Database_MSQL">
		<username>david</username>
		<hostname>localhost</hostname>
		<defaultcatalog>test</defaultcatalog>
	</sqlidespecific>

</databasespec>