<?xml version="1.0"?>
<xsd:schema
	xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	targetNamespace="urn:hackerdude.com/Schemas/2002/databasespec_1.0.xsd"
	xmlns="urn:hackerdude.com/Schemas/2002/databasespec_1.0.xsd"
	elementFormDefault="qualified">

<xsd:annotation>
<xsd:documentation>

This schema specifies the syntax of the SQLIDE database specifications.

</xsd:documentation>
</xsd:annotation>


<!--
	============================================================
	First to get Generic stuff out of the way.
	============================================================
-->

<xsd:complexType name="PROPERTIESType">
 <xsd:annotation>
	 <xsd:documentation>
A collaction of properties.
	 </xsd:documentation>
 </xsd:annotation>

	<xsd:sequence>
		<xsd:element name="property" type="PROPERTYType" minOcurrs="0" maxOcurrs="unbounded"/>
	</xsd:sequence>
</xsd:complexType>

<xsd:complexType name="PROPERTYType">
 <xsd:annotation>
	 <xsd:documentation>
A single name/value pair.
	 </xsd:documentation>
 </xsd:annotation>

	<xsd:sequence>
		<xsd:element name="name" type="xsd:string"/>
		<xsd:element name="value" type="xsd:string"/>
	</xsd:sequence>
</xsd:complexType>


<xsd:complexType name="JDBCType">
	<xsd:annotation>
		<xsd:documentation>
The JDBC Type allows us to specify values for JDBC connectivity.
		</xsd:documentation>
	</xsd:annotation>

	<xsd:sequence>
		<xsd:element name="driver" type="xsd:string"/>
		<xsd:element name="url" type="xsd:string"/>
		<xsd:element name="userName" type="xsd:string"/>
		<xsd:element name="properties" type="PROPERTIESType" minOcurrs="0" maxOcurrs="unbounded"/>
		<xsd:element name="classPath" type="CLASSPATHType" minOcurrs="0" maxOcurrs="unbounded"/>
	</xsd:sequence>

</xsd:complexType>

<xsd:complexType name="CLASSPATHType">
	<xsd:sequence>
		<xsd:element name="fileName" type="xsd:string" minOcurrs="0" maxOcurrs="unbounded"/>
	</xsd:sequence>
</xsd:complexType>

<!--
	========================================================================
	Now the types that are specific to our application...
	========================================================================
-->

<xsd:complexType name="SQLIDEGENERALType">
 <xsd:annotation>
	 <xsd:documentation>

This type represents general information for SQL-IDE.

	 </xsd:documentation>
 </xsd:annotation>
	<xsd:sequence>
		<xsd:element name="supportsDotNotation" type="xsd:boolean"/>
	</xsd:sequence>
</xsd:complexType>

<xsd:complexType name="PLUGINSPECIFICType">
 <xsd:annotation>
	 <xsd:documentation>
This type represents configuration that is plugin-specific, but also
connection-specific. This is for plugins that are not native to the SQLIDE-Base
to be able to save their own configuration information (that depends on the
database specification).
	 </xsd:documentation>
 </xsd:annotation>

	<xsd:sequence>
		<xsd:element name="properties" type="PROPERTIESType"/>
	</xsd:sequence>
	<xsd:attribute name="pluginName" type="xsd:string" use="required"/>

</xsd:complexType>

<xsd:complexType name="DATABASESPECType">
 <xsd:annotation>
	 <xsd:documentation>
Our root element.
	 </xsd:documentation>
 </xsd:annotation>
 <xsd:sequence>
	<xsd:element name="name" type="xsd:string"/>
	<xsd:element name="general" type="SQLIDEGENERALType"/>
	<xsd:element name="jdbc" type="SQLIDEGENERALType"/>
	<xsd:element name="plugin-specific" type="PLUGINSPECIFICType" minOcurrs="0" maxOcurrs="unbounded"/>
 </xsd:sequence>

</xsd:complexType>


	<!-- And here's our root element. -->
	<xsd:element name="database-spec" type="DATABASESPECType"/>

</xsd:schema>